<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.codehaus.griffon</groupId>
    <artifactId>griffon-example</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>griffon-app</packaging>

    <properties>
            <!-- =============================================== -->
            <!-- Include the griffon version here -->
            <!-- =============================================== -->
      <griffon.script.version>1.2.0</griffon.script.version>
    </properties>

<repositories>
  <repository>
    <id>com.springsource.repository.bundles.release</id>
    <name>EBR Spring Release Repository</name>
    <url>http://repository.springsource.com/maven/bundles/release</url>
  </repository>
</repositories>

    <dependencies>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.griffon</groupId>
                <artifactId>griffon-maven-plugin</artifactId>
                <version>1.3.0-SNAPSHOT</version>
                <extensions>true</extensions>
            </plugin>


            <!-- =============================================== -->
            <!-- Griffon use different directories during build, which
                 can be configured in several ways. The easiest way to 
                 overcome the temporary directories is to delete them
                 like this.
            -->
            <!-- =============================================== -->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                  <filesets>
                    <fileset>
                      <directory>template</directory>
                    </fileset>
                    <fileset>
                      <directory>dist</directory>
                    </fileset>
                    <fileset>
                      <directory>staging</directory>
                    </fileset>
                  </filesets>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>
