<component-set>
  <components>
    <!--  Specify one artifact handler and one lifecycle mapping per packaging type -->

	<!-- ============ -->
	<!-- griffon-app  -->
	<!-- ============ -->
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>griffon-app</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <extension>jar</extension>
        <type>griffon-app</type>
        <packaging>griffon-app</packaging>
        <language>java</language>
        <addedToClasspath>false</addedToClasspath>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>griffon-app</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <validate>org.codehaus.griffon:griffon-maven-plugin:validate</validate>
              <initialize>
                org.codehaus.griffon:griffon-maven-plugin:prepare,
              	org.codehaus.griffon:griffon-maven-plugin:init
              </initialize>
              <generate-sources>org.codehaus.griffon:griffon-maven-plugin:config-directories</generate-sources>
              <!-- 
              <compile>org.griffon:griffon-maven-plugin:maven-compile</compile>
              <test>org.griffon:griffon-maven-plugin:maven-test</test>
              <package>org.griffon:griffon-maven-plugin:maven-griffon-app-package</package>
              <integration-test>org.griffon:griffon-maven-plugin:maven-functional-test</integration-test>
               -->
              <install>org.apache.maven.plugins:maven-install-plugin:install</install>
              <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
            </phases>
          </lifecycle>
          <lifecycle>
            <id>clean</id>
            <phases>
              <clean>
                org.apache.maven.plugins:maven-clean-plugin:clean
              </clean>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>

	<!-- ================= -->
	<!-- griffon-webstart  -->
	<!-- ================= -->
    <component>
      <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
      <role-hint>griffon-webstart</role-hint>
      <implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
      <configuration>
        <extension>zip</extension>
        <type>griffon-webstart</type>
        <packaging>griffon-webstart</packaging>
        <language>java</language>
        <addedToClasspath>false</addedToClasspath>
      </configuration>
    </component>

    <component>
      <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
      <role-hint>griffon-webstart</role-hint>
      <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
      <configuration>
        <lifecycles>
          <lifecycle>
            <id>default</id>
            <phases>
              <compile>org.griffon:griffon-maven-plugin:sayhi</compile>
              <!-- 
              <initialize>org.griffon:griffon-maven-plugin:init</initialize>
              <generate-sources>org.griffon:griffon-maven-plugin:config-directories</generate-sources>
              <compile>org.griffon:griffon-maven-plugin:maven-compile</compile>
              <test>org.griffon:griffon-maven-plugin:maven-test</test>
              <package>org.griffon:griffon-maven-plugin:maven-griffon-app-war</package>
              <integration-test>org.griffon:griffon-maven-plugin:maven-functional-test</integration-test>
               -->
              <install>org.apache.maven.plugins:maven-install-plugin:install</install>
              <deploy>org.apache.maven.plugins:maven-deploy-plugin:deploy</deploy>
            </phases>
          </lifecycle>
          <lifecycle>
            <id>clean</id>
            <phases>
              <clean>
                org.apache.maven.plugins:maven-clean-plugin:clean
              </clean>
            </phases>
          </lifecycle>
        </lifecycles>
      </configuration>
    </component>
    <component>
      <role>org.codehaus.griffon.maven.tools.GriffonServices</role>
      <implementation>
        org.codehaus.griffon.maven.tools.DefaultGriffonServices
      </implementation>
      <configuration/>
    </component>
  </components>
</component-set>
